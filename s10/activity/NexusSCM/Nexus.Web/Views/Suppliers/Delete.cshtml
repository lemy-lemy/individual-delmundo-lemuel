@model Nexus.Core.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<h1>Delete Supplier</h1>
<h2 style="color:red">Are you sure you want to delete this?</h2>
<h2>Supplier Details</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="DeleteSupplier" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
            <input type="hidden" asp-for="Id" />
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-2">Contact Person</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ContactPerson)</dd>

                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
            </dl>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>